(jbuild_version 1)

(library
 ((public_name actor_pure)
  (name        actor_pure)

  (wrapped false)

  (modules
   (:standard \
    (actor_pure_worker
     actor_pure_manager
     test_pure_parameter
     test_pure_owl_parallel
  )))

  (flags (
